<div class="title">
	<h1>Ani-Desu</h1>
</div>
<div class="menu">
	<ul>
		<li><%= link_to 'Strona Glowna', controller: 'main_page' %></li>
		<li>Anime</li>
		<li><%= link_to 'AMV', controller: 'amv' %></li>
		<li>Manga</li>
		<li><%= link_to 'Wiadomosci', controller: 'articles' %></li>
	</ul>
</div>
<div class="tresc">
	<h1>Nowa wiadomosc</h1>
 
	<%= form_for @article do |f| %>
 
		<% if @article.errors.any? %>
			<div id="error_explanation">
				<div>Nie mozna zapisac:<div>
				<ul>
					<% @article.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
 
		<p class="article_label">
			<%= f.label :Temat %><br>
			<%= f.text_field :title %>
		</p>
  
		<p class="article_img">
			<%= f.label :Zdjece %><br>
			<%= f.file_field :img_name %>
		</p>
 
		<p class="article_text">
			<%= f.label :Tekst %><br>
			<%= f.text_area :text %>
		</p>
 
		<p class="articles_submit">
			<%= f.submit %>
		</p>
 
	<% end %>
 
	<%= link_to 'Back', articles_path %>
</div>